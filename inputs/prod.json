{
  "apiVersion": "v1beta3",
  "kind": "Build",
  "metadata":{
    "name": "{{NAME}}"
  },
  "spec": {
    "source": {
      "type": "Git",
      "git": {
        "uri": "{{GIT_URI}}",
        "ref": "{{GIT_REF}}"
      },
      "sourceSecret": {
        "name": "{{SOURCE_SECRET}}"
      },
      "sourceSecretName": "{{SOURCE_SECRET}}"
    },
    "output": {
      "to": {
        "kind": "DockerImage",
        "name": "{{REGISTRY_URI}}/{{OUTPUT_IMAGE_TAG}}"
      }
    },
    "strategy": {
      "type": "Custom",
      "customStrategy": {
        "from": {
          "kind": "ImageStreamTag",
          "name": "buildroot:latest"
        },
        "exposeDockerSocket": true,
        "env": [{
          "name": "DOCK_PLUGINS",
          "value": "TBD"
        }]
      }
    }
  }
}
